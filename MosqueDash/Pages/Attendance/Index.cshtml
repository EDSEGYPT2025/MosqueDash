@page
@model MosqueDash.Pages.Attendance.IndexModel
@{
    ViewData["Title"] = "تسجيل الحضور والغياب";
    ViewData["PageTitle"] = "سجل الحضور اليومي";
}

<div class="container mx-auto">
    <!-- Selection Form -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-6">
        <form method="get" id="selectionForm">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
                <div>
                    <label asp-for="SelectedCourseId" class="block text-sm font-medium text-gray-700 mb-1">اختر الدورة</label>
                    <select asp-for="SelectedCourseId" asp-items="Model.CoursesList" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm">
                        <option value="">-- اختر دورة --</option>
                    </select>
                </div>
                <div>
                    <label asp-for="AttendanceDate" class="block text-sm font-medium text-gray-700 mb-1">اختر التاريخ</label>
                    <input asp-for="AttendanceDate" type="date" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                </div>
                <div class="flex items-center">
                    <button type="submit" class="w-full bg-emerald-600 text-white px-4 py-2 rounded-lg hover:bg-emerald-700 transition duration-200">
                        عرض الطلاب
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Attendance Form -->
    @if (Model.StudentsForAttendance != null && Model.StudentsForAttendance.Any())
    {
        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="p-4 border-b">
                <h2 class="text-lg font-semibold text-gray-700">
                    قائمة الحضور والغياب ليوم @Model.AttendanceDate.ToString("dd-MM-yyyy")
                </h2>
            </div>
            <form method="post">
                <input type="hidden" asp-for="SelectedCourseId" />
                <input type="hidden" asp-for="AttendanceDate" />
                <table class="min-w-full divide-y divide-gray-200 mt-4">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">اسم الطالب</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">الحالة</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @for (int i = 0; i < Model.StudentsForAttendance.Count; i++)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    <input type="hidden" asp-for="StudentsForAttendance[i].EnrollmentId" />
                                    <input type="hidden" asp-for="StudentsForAttendance[i].StudentName" />
                                    @Model.StudentsForAttendance[i].StudentName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <div class="flex items-center justify-center space-x-4">
                                        <label class="flex items-center space-x-2">
                                            <input type="radio" asp-for="StudentsForAttendance[i].IsPresent" value="true" class="form-radio h-4 w-4 text-emerald-600" />
                                            <span>حاضر</span>
                                        </label>
                                        <label class="flex items-center space-x-2">
                                            <input type="radio" asp-for="StudentsForAttendance[i].IsPresent" value="false" class="form-radio h-4 w-4 text-rose-600" />
                                            <span>غائب</span>
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-6 flex justify-end">
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-200">
                        حفظ السجل
                    </button>
                </div>
            </form>
        </div>
    }
    else if (Request.Query.ContainsKey("SelectedCourseId"))
    {
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <p class="text-gray-600">لا يوجد طلاب مسجلون في هذه الدورة لعرضهم.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Optional: Auto-submit form on dropdown change for a smoother experience
        // document.getElementById('SelectedCourseId').addEventListener('change', function () {
        //     document.getElementById('selectionForm').submit();
        // });
    </script>
}
