@page
@model MosqueDash.Pages.Students.CreateModel
@{
    ViewData["Title"] = "إضافة طالب جديد";
    ViewData["PageTitle"] = "إضافة طالب";
}

<div class="container mx-auto">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md">
        <div class="p-4 border-b">
            <h2 class="text-lg font-semibold text-gray-700">بيانات الطالب الجديد</h2>
        </div>
        <div class="p-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

                <div class="grid grid-cols-1 gap-6">
                    <!-- Student Name & Age -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Student.Name" class="block text-sm font-medium text-gray-700 mb-1">اسم الطالب</label>
                            <input asp-for="Student.Name" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                            <span asp-validation-for="Student.Name" class="text-red-500 text-xs mt-1"></span>
                        </div>
                        <div>
                            <label asp-for="Student.Age" class="block text-sm font-medium text-gray-700 mb-1">العمر</label>
                            <input asp-for="Student.Age" type="number" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                        </div>
                    </div>

                    <!-- Guardian Name & Phone Number -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Student.GuardianName" class="block text-sm font-medium text-gray-700 mb-1">اسم ولي الأمر</label>
                            <input asp-for="Student.GuardianName" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                        </div>
                        <div>
                            <label asp-for="Student.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">رقم الهاتف</label>
                            <input asp-for="Student.PhoneNumber" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                        </div>
                    </div>

                    <!-- Notes -->
                    <div>
                        <label asp-for="Student.Notes" class="block text-sm font-medium text-gray-700 mb-1">ملاحظات</label>
                        <textarea asp-for="Student.Notes" rows="4" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm"></textarea>
                    </div>
                </div>

                <div class="mt-6 flex justify-end">
                    <a asp-page="Index" class="bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition duration-200 mr-2">
                        إلغاء
                    </a>
                    <button type="submit" class="bg-emerald-600 text-white px-4 py-2 rounded-lg hover:bg-emerald-700 transition duration-200">
                        حفظ الطالب
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
