@page "{id:int}"
@model MosqueDash.Pages.Students.EditModel
@{
    ViewData["Title"] = "تعديل بيانات الطالب";
}

<div class="bg-white p-6 md:p-8 rounded-lg shadow-md max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-800 border-b pb-4 mb-6">تعديل بيانات الطالب: @Model.Student.Name</h1>

    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4 bg-red-50 p-3 rounded-md"></div>

        <div class="space-y-6">
            <!-- Student Name & Age -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Student.Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Student.Name" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                    <span asp-validation-for="Student.Name" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div>
                    <label asp-for="Student.Age" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Student.Age" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                    <span asp-validation-for="Student.Age" class="text-red-500 text-xs mt-1"></span>
                </div>
            </div>

            <!-- Phone & WhatsApp -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Student.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Student.PhoneNumber" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                    <span asp-validation-for="Student.PhoneNumber" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div>
                    <label asp-for="Student.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Student.PhoneNumber" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                    <span asp-validation-for="Student.PhoneNumber" class="text-red-500 text-xs mt-1"></span>
                </div>
            </div>

            <!-- Study Field -->
            <div>
                <label asp-for="Student.GuardianName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Student.GuardianName" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="مثال: جامعي، ثانوي" />
                <span asp-validation-for="Student.GuardianName" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- Notes -->
            <div>
                <label asp-for="Student.Notes" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <textarea asp-for="Student.Notes" rows="4" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
                <span asp-validation-for="Student.Notes" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <div class="mt-8 flex justify-end gap-4">
            <a asp-page="Index" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-800 font-semibold text-sm rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                إلغاء
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white font-semibold text-sm rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                حفظ التعديلات
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

